[sub_resource type="GDScript" id="GDScript_waiting"]
script/source = "extends Control

@onready var message_label: Label = $MessageLabel
@onready var dots_label: Label = $DotsLabel

var _dots: int = 0
var _dot_timer: float = 0.0

func _ready() -> void:
	message_label.text = \"[SWEDISH: Waiting for tablet to connect...]\"

func _process(delta: float) -> void:
	_dot_timer += delta
	if _dot_timer >= 0.5:
		_dot_timer = 0.0
		_dots = (_dots + 1) % 4
		dots_label.text = \".\".repeat(_dots)

func set_message(text: String) -> void:
	message_label.text = text
"

