script/source = "extends Control
## Location select puzzle for together - Memory 1 (find the hiding spot)

signal puzzle_complete(success: bool, result: Dictionary)

@onready var title_label: Label = $TitleLabel
@onready var instruction_label: Label = $InstructionLabel
@onready var discussion_label: Label = $DiscussionLabel
@onready var locations_container: GridContainer = $LocationsContainer
@onready var confirm_button: Button = $ConfirmButton
@onready var feedback_label: Label = $FeedbackLabel

var puzzle_data: Dictionary = {}
var _correct_location: String = \"\"
var _selected_location: String = \"\"
var _location_buttons: Dictionary = {}


func _ready() -> void:
	confirm_button.pressed.connect(_on_confirm)
	confirm_button.disabled = true


func setup(data: Dictionary) -> void:
	puzzle_data = data

	title_label.text = data.get(\"title\", \"[SWEDISH: Find them!]\")
	instruction_label.text = data.get(\"instructions\", \"[SWEDISH: Where are they hiding?]\")
	discussion_label.text = \"[SWEDISH: Discuss together before choosing!]\"
	_correct_location = data.get(\"correct_location\", \"\")

	var locations: Array = data.get(\"locations\", [])
	_create_location_buttons(locations)


func _create_location_buttons(locations: Array) -> void:
	# Clear existing buttons
	for child in locations_container.get_children():
		child.queue_free()
	_location_buttons.clear()

	# Create buttons for each location
	for loc in locations:
		var loc_id: String = loc.get(\"id\", \"\")
		var loc_name: String = loc.get(\"name\", \"?\")

		var button := Button.new()
		button.text = loc_name
		button.custom_minimum_size = Vector2(200, 80)
		button.add_theme_font_size_override(\"font_size\", 24)
		button.pressed.connect(_on_location_selected.bind(loc_id))

		# Add icon based on location type
		var icon := _get_location_icon(loc_id)
		button.text = icon + \" \" + loc_name

		locations_container.add_child(button)
		_location_buttons[loc_id] = button


func _get_location_icon(loc_id: String) -> String:
	match loc_id:
		\"cupboard\": return \"ðŸšª\"
		\"drawer\": return \"ðŸ—„\"
		\"under_table\": return \"ðŸª‘\"
		\"behind_curtain\": return \"ðŸªŸ\"
		\"in_pot\": return \"ðŸ²\"
		_: return \"â“\"


func _on_location_selected(loc_id: String) -> void:
	# Deselect previous
	if _selected_location in _location_buttons:
		var prev_btn: Button = _location_buttons[_selected_location]
		prev_btn.add_theme_color_override(\"font_color\", Color.WHITE)

	# Select new
	_selected_location = loc_id
	if loc_id in _location_buttons:
		var btn: Button = _location_buttons[loc_id]
		btn.add_theme_color_override(\"font_color\", Constants.Colors.HIGHLIGHT_GOLD)

	confirm_button.disabled = false
	feedback_label.text = \"\"


func _on_confirm() -> void:
	if _selected_location.is_empty():
		return

	if _selected_location == _correct_location:
		_on_correct()
	else:
		_on_wrong()


func _on_correct() -> void:
	feedback_label.text = \"[SWEDISH: You found them! The tomtenissar were hiding in the cupboard!]\"
	feedback_label.add_theme_color_override(\"font_color\", Constants.Colors.SUCCESS_GREEN)

	# Disable all buttons
	for btn in _location_buttons.values():
		btn.disabled = true
	confirm_button.disabled = true

	# Highlight correct answer
	if _correct_location in _location_buttons:
		var correct_btn: Button = _location_buttons[_correct_location]
		var tween := create_tween()
		tween.tween_property(correct_btn, \"modulate\", Constants.Colors.HIGHLIGHT_GOLD, 0.3)
		tween.tween_property(correct_btn, \"modulate\", Color.WHITE, 0.3)
		tween.set_loops(2)

	await get_tree().create_timer(2.0).timeout

	puzzle_complete.emit(true, {
		\"selected_location\": _selected_location
	})


func _on_wrong() -> void:
	feedback_label.text = \"[SWEDISH: Not there... Discuss again and try another spot!]\"
	feedback_label.add_theme_color_override(\"font_color\", Constants.Colors.ERROR_RED)

	# Disable wrong button
	if _selected_location in _location_buttons:
		var wrong_btn: Button = _location_buttons[_selected_location]
		wrong_btn.disabled = true
		wrong_btn.modulate = Color(0.5, 0.5, 0.5)

	_selected_location = \"\"
	confirm_button.disabled = true
"

