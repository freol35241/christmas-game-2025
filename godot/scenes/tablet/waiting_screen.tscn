[sub_resource type="GDScript" id="GDScript_waiting"]
script/source = "extends Control
## Waiting screen shown when tablet should watch TV

@onready var message_label: Label = $CenterContainer/VBox/MessageLabel
@onready var dots_label: Label = $CenterContainer/VBox/DotsLabel
@onready var tv_icon: Label = $CenterContainer/VBox/TVIcon

var _dots: int = 0
var _dot_timer: float = 0.0


func _ready() -> void:
	message_label.text = \"[SWEDISH: Watch the TV!]\"


func _process(delta: float) -> void:
	_dot_timer += delta
	if _dot_timer >= 0.5:
		_dot_timer = 0.0
		_dots = (_dots + 1) % 4
		dots_label.text = \".\".repeat(_dots)


func set_message(text: String) -> void:
	message_label.text = text
"

